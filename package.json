{
  "name": "ui-scaler",
  "version": "1.0.3",
  "description": "Your best ally for easily building responsive web applications",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.esm.mjs",
    "require": "./dist/index.cjs.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --verbose ./tests",
    "build": "rollup -c --bundleConfigAsCjs && npm run browserify",
    "prepublishOnly": "npm test && npm run build",
    "browserify": "tsc src/browserify.ts --outDir temp && browserify temp/browserify.js -t [ babelify --presets [ '@babel/preset-env' ] ] | terser -c -m -o dist/browser-bundle.min.js && rm -rf temp"
  },
  "keywords": [
    "ui",
    "scaler",
    "responsive",
    "responsiveness",
    "screen",
    "proportion",
    "resolution",
    "interface",
    "desktop",
    "size"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arthursb2016/ui-scaler"
  },
  "author": "Arthur Borba <arthurborba.dev>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-modules-commonjs": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.5.5",
    "babel": "^6.23.0",
    "babel-jest": "^29.7.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "rollup": "^3.29.5",
    "rollup-plugin-typescript2": "^0.36.0",
    "terser": "^5.36.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.7.0",
    "typescript": "^5.6.3"
  }
}
